{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build SortWiz",
			"type": "shell",
			"command": "clang++",
			"args": [
				"-std=c++20",
				"-I/opt/homebrew/include/SDL2",
				"-I/opt/homebrew/Cellar/sdl2_ttf/2.24.0/include/SDL2",
				"-L/opt/homebrew/lib",
				"-L/opt/homebrew/Cellar/sdl2_ttf/2.24.0/lib",
				"-lSDL2",
				"-lSDL2_ttf",
				"main.cpp",
				"-o",
				"sortwiz"
			],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			],
			"isBackground": false
		}
	]
}